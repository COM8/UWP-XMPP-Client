<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Windows10FallCreatorsUpdate="http://schemas.microsoft.com/winfx/2006/xaml/presentation?IsApiContractPresent(Windows.Foundation.UniversalApiContract, 5)"
                    xmlns:controls="using:UWPX_UI.Controls.Toolkit.SlidableListItem">

    <ControlTemplate x:Key="SlidableListItemSwipeControlStyle"
                     TargetType="controls:SlidableListItem">
        <Windows10FallCreatorsUpdate:SwipeControl x:Name="SwipeControl">
            <Grid Background="{TemplateBinding Background}">
                <ContentPresenter/>
            </Grid>
        </Windows10FallCreatorsUpdate:SwipeControl>
    </ControlTemplate>

</ResourceDictionary>
