<UserControl x:Class="UWPX_UI.Controls.Settings.AccountErrorsGeneralControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:valueconverter="using:UWPX_UI_Context.Classes.ValueConverter"
             mc:Ignorable="d">

    <UserControl.Resources>
        <valueconverter:SocketErrorCodeTextValueConverter x:Key="SocketErrorCodeTextValueConverter"/>
        <valueconverter:ConnectionErrorCodeTextValueConverter x:Key="ConnectionErrorCodeTextValueConverter"/>
    </UserControl.Resources>

    <ScrollViewer HorizontalScrollMode="Disabled">
        <StackPanel>
            <TextBlock Foreground="Red"
                       IsTextSelectionEnabled="True"
                       TextWrapping="Wrap">
                <Run FontWeight="Bold"
                     Text="Error code: "/>
                <Run Text="{x:Bind Account.ConnectionError, Mode=OneWay, Converter={StaticResource ConnectionErrorCodeTextValueConverter}}"/>
            </TextBlock>
            <TextBlock Foreground="Red"
                       IsTextSelectionEnabled="True"
                       TextWrapping="Wrap">
                <Run FontWeight="Bold"
                     Text="Socket error code: "/>
                <Run Text="{x:Bind Account.ConnectionError, Mode=OneWay, Converter={StaticResource SocketErrorCodeTextValueConverter}}"/>
            </TextBlock>
            <TextBlock Foreground="Red"
                       IsTextSelectionEnabled="True"
                       TextWrapping="Wrap">
                <Run FontWeight="Bold"
                     Text="Error message: "/>
                <Run Text="{x:Bind Account.ConnectionError.ERROR_MESSAGE, Mode=OneWay, FallbackValue='-'}"/>
            </TextBlock>
        </StackPanel>
    </ScrollViewer>
</UserControl>
