<UserControl x:Class="UWPX_UI.Controls.Chat.ContactMediaControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Width="200"
             Height="300"
             mc:Ignorable="d">

    <controls:DropShadowPanel Grid.Row="1"
                              HorizontalContentAlignment="Stretch">
        <Border HorizontalAlignment="Stretch"
                Background="{ThemeResource AppBackgroundAcrylicWindowBrush}">
            <Grid Background="{ThemeResource AppBackgroundAcrylicElementBrush}">
                <TextBlock Text="Media"/>
            </Grid>
        </Border>
    </controls:DropShadowPanel>
</UserControl>
