<UserControl x:Class="UWPX_UI.Controls.Chat.ChatDetailsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="using:UWPX_UI.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:valueconverter="using:UWPX_UI_Context.Classes.ValueConverter"
             d:DesignHeight="300"
             d:DesignWidth="400"
             mc:Ignorable="d">
    <UserControl.Resources>
        <valueconverter:OmemoBoolGlyphTextValueConverter x:Key="OmemoBoolGlyphTextValueConverter"/>
        <valueconverter:OmemoBoolBrushValueConverter x:Key="OmemoBoolBrushValueConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--  Main:  -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!--  Header:  -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <controls:AccountImagePresenceControl Grid.Column="0"
                                                      Width="30"
                                                      Height="30"
                                                      Margin="10"
                                                      HorizontalAlignment="Left"
                                                      VerticalAlignment="Center"/>
                <Grid x:Name="headerInfo_grid"
                      Grid.Column="1"
                      RightTapped="HeaderInfo_grid_RightTapped">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ContextFlyout>
                        <MenuFlyout>
                            <MenuFlyoutItem x:Name="copyNameText_mfi"
                                            Click="CopyNameText_mfi_Click"
                                            Text="Copy chat text">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE8C8;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem x:Name="copyAccountText_mfi"
                                            Click="CopyAccountText_mfi_Click"
                                            Text="Copy account text">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE8C8;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem x:Name="copyChatStatus_mfi"
                                            Click="CopyChatStatus_mfi_Click"
                                            Text="Copy chat status/subject">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE8C8;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                        </MenuFlyout>
                    </Grid.ContextFlyout>

                    <!--  Name:  -->
                    <TextBlock Grid.Row="0"
                               HorizontalAlignment="Center"
                               FontWeight="Bold"
                               Text="{x:Bind VIEW_MODEL.MODEL.NameText, Mode=OneWay}"
                               TextTrimming="CharacterEllipsis"/>
                    <!--  Account:  -->
                    <TextBlock Grid.Row="1"
                               HorizontalAlignment="Center"
                               FontSize="10"
                               Foreground="{StaticResource SystemControlPageTextBaseMediumBrush}"
                               Text="{x:Bind VIEW_MODEL.MODEL.AccountText, Mode=OneWay}"
                               TextTrimming="CharacterEllipsis"/>
                    <!--  Status:  -->
                    <TextBlock Grid.Row="2"
                               HorizontalAlignment="Center"
                               FontSize="10"
                               Foreground="{StaticResource SystemControlPageTextBaseMediumBrush}"
                               Text="{x:Bind VIEW_MODEL.MODEL.StatusText, Mode=OneWay}"
                               TextTrimming="CharacterEllipsis"/>
                </Grid>
                <Button Grid.Column="2"
                        Height="30"
                        Margin="10,0,10,0"
                        VerticalAlignment="Center"
                        Content="&#xE712;"
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="20"
                        ToolTipService.ToolTip="More">
                    <Button.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem x:Name="info_mfo"
                                            Click="Info_mfo_Click"
                                            Text="Info">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xEA4A;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem x:Name="join_mfo"
                                            Click="Join_mfo_Click"
                                            Text="Join room"
                                            Visibility="{x:Bind VIEW_MODEL.MODEL.JoinMucVisability, Mode=OneWay}">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Foreground="Green"
                                              Glyph="&#xE8BD;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem x:Name="leave_mfo"
                                            Click="Leave_mfo_Click"
                                            Text="Leave room"
                                            Visibility="{x:Bind VIEW_MODEL.MODEL.LeaveMucVisability, Mode=OneWay}">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Foreground="Red"
                                              Glyph="&#xE89B;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <ToggleMenuFlyoutItem x:Name="omemo_tmfo"
                                                  Click="Omemo_tmfo_Click"
                                                  IsChecked="{x:Bind VIEW_MODEL.MODEL.OmemoEnabled, Mode=TwoWay}"
                                                  Text="Encrypted (OMEMO)"
                                                  Visibility="{x:Bind VIEW_MODEL.MODEL.OmemoVisability, Mode=OneWay}">
                                <ToggleMenuFlyoutItem.Icon>
                                    <FontIcon Foreground="{x:Bind VIEW_MODEL.MODEL.OmemoEnabled, Mode=OneWay, Converter={StaticResource OmemoBoolBrushValueConverter}}"
                                              Glyph="{x:Bind VIEW_MODEL.MODEL.OmemoEnabled, Mode=OneWay, Converter={StaticResource OmemoBoolGlyphTextValueConverter}}"/>
                                </ToggleMenuFlyoutItem.Icon>
                            </ToggleMenuFlyoutItem>
                            <MenuFlyoutItem x:Name="test_mfo"
                                            Click="Test_mfo_Click"
                                            Text="Debug/Test"
                                            Visibility="{x:Bind VIEW_MODEL.MODEL.DebugVisability, Mode=OneWay}">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Foreground="Gold"
                                              Glyph="&#xE81F;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>
            </Grid>

            <!--  Messages:  -->

            <!--  Input:  -->
        </Grid>
    </Grid>
</UserControl>
