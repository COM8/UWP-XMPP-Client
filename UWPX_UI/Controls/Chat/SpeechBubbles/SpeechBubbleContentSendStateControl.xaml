<UserControl x:Class="UWPX_UI.Controls.Chat.SpeechBubbles.SpeechBubbleContentSendStateControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Margin="0,7,0,-1"
                   FontFamily="Segoe MDL2 Assets"
                   Text="{x:Bind ViewModel.MODEL.StateIconText, Mode=OneWay}"/>
        <TextBlock Margin="5,0,0,0"
                   FontFamily="Segoe MDL2 Assets"
                   Text="&#xE73E;"
                   Visibility="{x:Bind ViewModel.MODEL.IsDelivered, Mode=OneWay, Converter={StaticResource BoolVisabilityValueConverter}}"/>
    </Grid>
</UserControl>
