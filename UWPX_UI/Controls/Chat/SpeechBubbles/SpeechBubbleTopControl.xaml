<UserControl x:Class="UWPX_UI.Controls.Chat.SpeechBubbles.SpeechBubbleTopControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:speechbubbles="using:UWPX_UI.Controls.Chat.SpeechBubbles"
             MinWidth="100"
             HorizontalAlignment="Left"
             RightTapped="UserControl_RightTapped"
             mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Polygon Grid.Row="0"
                 Fill="{StaticResource SpeechBubbleBackgroundLightBrush}"
                 Points="10,0 10,10 20,10"/>

        <Border Grid.Row="0"
                Margin="0,10,10,0"
                Background="{StaticResource SpeechBubbleBackgroundLightBrush}">
            <speechbubbles:SpeechBubbleContentControl x:Name="content_sbc"
                                                      Margin="10"
                                                      ChatMessage="{x:Bind ChatMessage, Mode=TwoWay}"/>
        </Border>

        <controls:DropShadowPanel Grid.Row="0"
                                  HorizontalAlignment="Right">
            <Ellipse x:Name="readStatus_elipse"
                     Width="20"
                     Height="20"
                     VerticalAlignment="Top"
                     Fill="{StaticResource SpeechBubbleBackgroundLightBrush}"/>
        </controls:DropShadowPanel>
    </Grid>
</UserControl>
