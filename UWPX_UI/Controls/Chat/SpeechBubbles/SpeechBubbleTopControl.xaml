<UserControl x:Class="UWPX_UI.Controls.Chat.SpeechBubbles.SpeechBubbleTopControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:speechbubbles="using:UWPX_UI.Controls.Chat.SpeechBubbles"
             HorizontalAlignment="Left"
             d:DesignHeight="300"
             d:DesignWidth="400"
             mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Polygon Margin="0,10,0,0"
                 Fill="{StaticResource SpeechBubbleBackgroundLightBrush}"
                 Points="0,0 15,0 15,15"
                 Stroke="Black"/>

        <Border Margin="14,0,0,0"
                Padding="6"
                VerticalAlignment="Top"
                Background="{StaticResource SpeechBubbleBackgroundLightBrush}"
                BorderBrush="Black"
                BorderThickness="0.5"
                CornerRadius="3">
            <speechbubbles:SpeechBubbleContentControl Margin="10,20,10,10"
                                                      Background="{StaticResource SpeechBubbleBackgroundLightBrush}"
                                                      ChatMessage="{x:Bind ChatMessage, Mode=TwoWay}"
                                                      SizeChanged="SpeechBubbleContentControl_SizeChanged"/>
        </Border>

        <Polygon Margin="0,10,0,0"
                 Fill="{StaticResource SpeechBubbleBackgroundLightBrush}"
                 Points="0,0 15,0 15,15"/>

        <controls:DropShadowPanel Grid.Row="0"
                                  Margin="0,0,-10,-10"
                                  HorizontalAlignment="Right">
            <Ellipse x:Name="readStatus_elipse"
                     Width="20"
                     Height="20"
                     VerticalAlignment="Top"
                     Fill="{StaticResource SpeechBubbleBackgroundLightBrush}"/>
        </controls:DropShadowPanel>
    </Grid>
</UserControl>
