<Page x:Class="UWPX_UI.Pages.Settings.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:animations="using:Microsoft.Toolkit.Uwp.UI.Animations"
      xmlns:composition1="using:Microsoft.Toolkit.Uwp.UI.Controls"
      xmlns:controls="using:UWPX_UI.Controls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:datatemplates="using:UWPX_UI_Context.Classes.DataTemplates"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Background="{StaticResource AppBackgroundAcrylicWindowBrush}"
      mc:Ignorable="d">

    <Page.Resources>
        <DataTemplate x:Key="SettingsPageTemplate"
                      x:DataType="datatemplates:SettingsPageDataTemplate">
            <composition1:DropShadowPanel PointerEntered="DropShadowPanel_PointerEntered"
                                          PointerExited="DropShadowPanel_PointerExited">
                <Grid Width="140"
                      Height="160"
                      Background="{StaticResource AppBackgroundAcrylicWindowBrush}">
                    <Grid Margin="5,10,5,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <FontIcon Margin="0,20,0,10"
                                  HorizontalAlignment="Center"
                                  FontSize="50"
                                  Foreground="{ThemeResource SystemAccentColor}"
                                  Glyph="{x:Bind Glyph}"/>
                        <TextBlock Grid.Row="1"
                                   HorizontalAlignment="Center"
                                   Style="{StaticResource BodyTextBlockStyle}"
                                   Text="{x:Bind Name}"/>
                        <TextBlock Grid.Row="2"
                                   HorizontalAlignment="Center"
                                   Foreground="{ThemeResource SystemControlBackgroundBaseMediumBrush}"
                                   MaxLines="5"
                                   Style="{StaticResource CaptionTextBlockStyle}"
                                   Text="{x:Bind Description}"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"/>
                    </Grid>
                </Grid>
            </composition1:DropShadowPanel>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <controls:CustomTitleBarControl Grid.Row="0"/>

        <ScrollViewer Grid.Row="1"
                      HorizontalScrollMode="Disabled"
                      VerticalScrollBarVisibility="Hidden"
                      VerticalScrollMode="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <controls:SettingsHeaderControl Glyph="&#xE713;"
                                                Text="Settings"/>
                <GridView Grid.Row="1"
                          MaxWidth="750"
                          Margin="0,10,0,10"
                          HorizontalAlignment="Center"
                          animations:ReorderGridAnimation.Duration="800"
                          IsItemClickEnabled="True"
                          ItemClick="AdaptiveGridView_ItemClick"
                          ItemTemplate="{StaticResource SettingsPageTemplate}"
                          ItemsSource="{x:Bind SETTINGS_PAGES}"
                          SelectionMode="Single">
                    <GridView.ItemContainerStyle>
                        <Style TargetType="FrameworkElement">
                            <Setter Property="Margin" Value="10"/>
                        </Style>
                    </GridView.ItemContainerStyle>
                </GridView>
                <TextBlock Grid.Row="2"
                           Margin="10"
                           HorizontalAlignment="Center">
                    <Run x:Name="name_run"
                         Text="UWPX"/>
                    <Run x:Name="version_run"
                         Text="v.0.0.0.0"/>
                    <LineBreak/>
                    <Run Text="Thanks for your support! ❤"/>
                </TextBlock>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
