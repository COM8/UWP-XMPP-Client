<Page x:Class="UWPX_UI.Pages.ExtendedSplashScreenPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Grid Background="{ThemeResource SystemAccentColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Source="ms-appx:///Assets/Images/splash_screen.png"
               Stretch="UniformToFill"/>
        <Canvas Grid.Row="0">
            <Image x:Name="logo_img"
                   Source="ms-appx:///Assets/SplashScreen.scale-200.png"/>
        </Canvas>
    </Grid>
</Page>
