<UserControl
    x:Class="UWP_XMPP_Client.Controls.IconTextBlockControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Orientation="Horizontal">
        <TextBlock FontFamily="Segoe MDL2 Assets" Text="{x:Bind Icon, Mode=OneWay}" Foreground="{x:Bind IconForeground, Mode=OneWay}" VerticalAlignment="Center"/>
        <TextBlock Text="{x:Bind Text, Mode=OneWay}" Margin="5, 0, 0, 0" VerticalAlignment="Center"/>
    </StackPanel>
</UserControl>
