<UserControl x:Class="UWP_XMPP_Client.Controls.SpeechBubbleTopControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls1="using:UWP_XMPP_Client.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <Grid Padding="6"
          HorizontalAlignment="Left">
        <Polygon Margin="10,0,0,0"
                 Fill="{StaticResource SpeechBubbleBackgroundLightBrush}"
                 Points="0,0 10,10 0,10"
                 Stroke="Black"/>
        <controls1:SpeechBubbleContentControl Margin="0,10,0,0"
                                              Background="{StaticResource SpeechBubbleBackgroundLightBrush}"
                                              Chat="{x:Bind Chat, Mode=OneWay}"
                                              ChatMessage="{x:Bind ChatMessage, Mode=OneWay}"/>
        <Polygon Margin="10.4,1,0,0"
                 Fill="{StaticResource SpeechBubbleBackgroundLightBrush}"
                 Points="0,0 11,11 0,11"
                 Visibility="Visible"/>
    </Grid>
</UserControl>
