<UserControl
    x:Class="UWP_XMPP_Client.Controls.SpeechBubbleDownControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid HorizontalAlignment="Right" Padding="6">
        <Polygon Points="10,10 0,0 10,0" Fill="{ThemeResource SystemAccentColorDark3}" Stroke="Black" Margin="0,0,11,0" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>

        <Border Visibility="Visible" Background="{ThemeResource SystemAccentColorDark3}" BorderBrush="Black" BorderThickness="1" Padding="10" VerticalAlignment="Bottom" Margin="0, 0, 0, 10" MinWidth="150" MinHeight="50">
            <StackPanel>
                <TextBlock Text="{x:Bind Text}" TextWrapping="Wrap"/>
                <TextBlock x:Name="date_tbx" FontSize="10" HorizontalAlignment="Right" Foreground="{StaticResource SystemControlBackgroundBaseMediumBrush}"/>
            </StackPanel>
        </Border>

        <Polygon Visibility="Visible" Points="11,11 0,0 11,0" Fill="{ThemeResource SystemAccentColorDark3}" Margin="0,0,11.4,1" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
    </Grid>
</UserControl>
