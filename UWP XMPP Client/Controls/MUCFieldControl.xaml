<UserControl
    x:Class="UWP_XMPP_Client.Controls.MUCFieldControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel>
        <TextBlock x:Name="label_tblck" FontSize="20" TextWrapping="Wrap"/>
        <PasswordBox x:Name="passwordField_pswd" Visibility="Collapsed" Margin="0, 5, 0, 0" IsEnabled="{x:Bind InputEnabled}"/>
        <ToggleSwitch x:Name="toggleField_tgls" Visibility="Collapsed" IsEnabled="{x:Bind InputEnabled}"/>
        <TextBox x:Name="textField_tbx" Visibility="Collapsed" Margin="0, 5, 0, 0" IsEnabled="{x:Bind InputEnabled}"/>
        <ComboBox x:Name="listField_cmbb" PlaceholderText="Please select one..." Visibility="Collapsed" Margin="0, 5, 0, 0" IsEnabled="{x:Bind InputEnabled}"/>
    </StackPanel>
</UserControl>
