<UserControl x:Class="UWP_XMPP_Client.Controls.OmemoFingerprintControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:UWP_XMPP_Client.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <StackPanel>
        <TextBlock Text="OMEMO fingerprint:"
                   FontWeight="Bold"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="fingerprint_tbx"
                       Margin="0,10,10,0"
                       IsTextSelectionEnabled="True"
                       TextWrapping="WrapWholeWords"/>
            <Button x:Name="cpyFingerprint_btn"
                    Grid.Column="1"
                    Click="cpyFingerprint_btn_Click"
                    VerticalAlignment="Center"
                    Content="&#xE8C8;"
                    FontFamily="Segoe MDL2 Assets"/>
        </Grid>
        <local:QRCodeControl x:Name="fingerprintQRCode_qrcc"
                             Margin="0,10,0,0"/>
    </StackPanel>
</UserControl>
