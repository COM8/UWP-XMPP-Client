<UserControl
    x:Class="UWP_XMPP_Client.Controls.AccountImageWithPresenceControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Width="40"
    Height="40">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Fill="{ThemeResource SystemControlDisabledChromeDisabledLowBrush}"/>
        <Viewbox Stretch="Uniform" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TextBlock x:Name="placeholder_tbx" Grid.Column="0" Foreground="{ThemeResource ApplicationPageBackgroundThemeBrush}" FontFamily="Segoe MDL2 Assets" Text="&#xE2AF;" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="3"/>
        </Viewbox>
        <Border x:Name="presence_brdr" Grid.Column="0" BorderThickness="2" BorderBrush="#4C4A4B" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Image x:Name="user_img" Source="{x:Bind Image}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>
