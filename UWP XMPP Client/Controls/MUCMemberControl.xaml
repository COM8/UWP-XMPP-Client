<UserControl
    x:Class="UWP_XMPP_Client.Controls.MUCMemberControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="{x:Bind Member.nickname, Mode=OneWay}" TextWrapping="Wrap"/>
        <TextBlock Grid.Row="1" Text="{x:Bind Member.jId, Mode=OneWay}" TextWrapping="Wrap"/>
        <TextBlock Grid.Row="2" Text="{x:Bind Member.role, Mode=OneWay}"/>
        <TextBlock Grid.Row="3" Text="{x:Bind Member.affiliation, Mode=OneWay}"/>
    </Grid>
</UserControl>
