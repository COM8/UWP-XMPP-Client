<Page
    x:Class="UWP_XMPP_Client.Pages.ChatPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:datatemplates="using:UWP_XMPP_Client.DataTemplates"
    xmlns:controls1="using:UWP_XMPP_Client.Controls"
    mc:Ignorable="d"
    Loaded="Page_Loaded">

    <Page.Resources>
        <DataTemplate x:Key="masterTemplate" x:DataType="datatemplates:ChatTemplate">
            <controls1:ChatMasterControl Chat="{x:Bind chat, Mode=TwoWay}" Client="{x:Bind client, Mode=OneWay}" MUCInfo="{x:Bind mucInfo, Mode=OneWay}"/>
        </DataTemplate>

        <DataTemplate x:Key="detailsTemplate" x:DataType="datatemplates:ChatTemplate">
            <controls1:ChatDetailsControl Chat="{x:Bind chat, Mode=TwoWay}" Client="{x:Bind client, Mode=OneWay}" MUCInfo="{x:Bind mucInfo, Mode=OneWay}"/>
        </DataTemplate>

        <DataTemplate x:Key="noSelectionTemplate">
            <Grid Background="{ThemeResource SystemControlBackgroundAltMediumBrush}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image Source="ms-appx:///Assets/Images/xmpp_logo.png" Height="100" Width="100"/>
                    <TextBlock FontSize="24" Text="Select an item to view."/>
                </StackPanel>
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--Background-->
        <controls:ImageEx x:Name="backgroundImage_img" Grid.Row="0"
                          Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <!--Content-->
        <Grid x:Name="main_grid" Grid.Row="0" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <controls:MasterDetailsView x:Name="masterDetail_pnl"
                                        Grid.Row="2"
                                        NoSelectionContentTemplate="{StaticResource noSelectionTemplate}"
                                        ItemTemplate="{StaticResource masterTemplate}"
                                        DetailsTemplate="{StaticResource detailsTemplate}"
                                        ItemsSource="{x:Bind chatsList, Mode=OneWay}"
                                        Background="Transparent"
                                        MasterPaneBackground="{ThemeResource SystemControlBackgroundAltMediumBrush}"
                                        SelectionChanged="masterDetail_pnl_SelectionChanged">

                <!--Style-->
                <controls:MasterDetailsView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="BorderThickness" Value="0"/>
                    </Style>
                </controls:MasterDetailsView.ItemContainerStyle>

                <!--Master Header-->
                <controls:MasterDetailsView.MasterHeader>
                    <StackPanel Margin="-12, 0, -12, 0" Background="{ThemeResource SystemControlBackgroundAltMediumBrush}">
                        <AutoSuggestBox
                            x:Name="searchChats_asb"
                            PlaceholderText="Filter chats"
                            Margin="10"
                            TextChanged="searchChats_asb_TextChanged"
                            QueryIcon="Find"
                            QuerySubmitted="searchChats_asb_QuerySubmitted"
                            BorderThickness="0"/>
                        <controls1:SeperatorControl/>
                    </StackPanel>
                </controls:MasterDetailsView.MasterHeader>

                <!--Master Command Bar-->
                <controls:MasterDetailsView.MasterCommandBar>
                <CommandBar Margin="0, 0, 0, -1">
                    <AppBarButton x:Name="add_abb" Grid.Column="0" Label="Add">
                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE109;" FontFamily="Segoe MDL2 Assets"/>
                        </AppBarButton.Icon>
                        <AppBarButton.Flyout>
                            <MenuFlyout>
                                <MenuFlyoutItem x:Name="addChat_mfoi" Text="Add Chat" Click="addChat_mfoi_Click"/>
                                <MenuFlyoutSeparator/>
                                <MenuFlyoutItem x:Name="addMUC_mfoi" Text="Add Group Chat (MUC)" Click="addMUC_mfoi_Click"/>
                                <MenuFlyoutItem x:Name="addMIX_mfoi" IsEnabled="False" Text="Add Group Chat (MIX)" Click="addMIX_mfoi_Click"/>
                            </MenuFlyout>
                        </AppBarButton.Flyout>
                    </AppBarButton>
                    <AppBarButton x:Name="settings_abb" Grid.Column="1" Label="Settings" Click="settings_abb_Click">
                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE713;" FontFamily="Segoe MDL2 Assets"/>
                        </AppBarButton.Icon>
                    </AppBarButton>
                </CommandBar>
                </controls:MasterDetailsView.MasterCommandBar>
            </controls:MasterDetailsView>
        </Grid>
        <!--Loading Grid-->
        <Grid x:Name="loading_grid" Grid.Row="0" Visibility="Visible" HorizontalAlignment="Stretch" VerticalAlignment="Center" Background="{ThemeResource SystemControlBackgroundAltMediumBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Loading..." FontSize="20" Grid.Row="0" HorizontalAlignment="Center"/>
            <ProgressBar IsIndeterminate="True" IsEnabled="True" HorizontalAlignment="Stretch" Grid.Row="1" Margin="10"/>
        </Grid>
    </Grid>
</Page>
